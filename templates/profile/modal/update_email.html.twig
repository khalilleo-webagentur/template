<div class="modal fade" id="emailModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="emailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title text-dark fs-5" id="emailModalLabel">Change Email</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form action="{{path('app_profile_personal_data_email_store')}}" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="iEmail" class="form-label text-secondary">New Email:</label>
                        <input type="text" class="form-control" id="iEmail" placeholder="{{app.user.email}}"
                            name="iEmail" style="height: 42px; border-radius: 0;" required>
                        <small class="text-secondary text-secondary">This feld is required.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update E-mail</button>
                </div>
            </form>

        </div>
    </div>
</div>